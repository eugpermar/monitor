/* vector requests. Please note the "split_op" argument */

{
  "conf": {
    "debug": 8, /* See syslog error levels */
    "syslog": 0,
    "stdout": 1,
    "threads": 1,
    "timeout": 1,
    "max_snmp_fails": 2,
    "max_kafka_fails": 2,
    "sleep_main_thread": 10,
    "sleep_worker_thread": 1,
    "kafka_broker": "192.168.101.201",
    "kafka_topic": "rb_monitor",
    "kafka_timeout": 20,
  }
  ,
  "sensors":
  
  [
    {
      "sensor_id":1,
      "timeout":2,
      "sensor_name": "sensor-arriba",
      "sensor_ip": "localhost", /* This field is better after sensor_name, so we can debug it */
      "community" : "public",
      "monitors": /* this field MUST be the last! */
      [        
        {"name": "load_1", "system":  "echo '3;2;1;0'", "unit": "%", "send": 1, "name_split_suffix":"_per_instance", "split":";", "split_op":"sum"},
        {"name": "load_5", "system": "echo '4;5;6;7'", "unit": "%",  "name_split_suffix":"_per_instance", "split":";", "split_op":"mean"},
      ]
    }
  ]
}
